@model IEnumerable<Web.Models.LayoutModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h1 class="text-center">Locations</h1>
    <div class="row">
        <div class="col-sm-12">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SiteName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TitleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SiteAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary" href="~/@item.SiteName">@item.SiteName</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.TitleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SiteAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>



    
</div>